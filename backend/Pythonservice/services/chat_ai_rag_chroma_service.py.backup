        is_premium = any(kw in query_lower for kw in ['cao cáº¥p', 'premium', 'flagship', 'xá»‹n'])
        
        # Láº¥y sáº£n pháº©m LIÃŠN QUAN vá»›i query
        product_context = self.retrieve_product_context(query, top_k_products)
        
        # Láº¥y knowledge context
